p#notice = notice
article.card
  .card-content
    span.card-title.black-text= link_to @channel.title, @channel.source_url    
    = render partial: 'tags', locals: {tags: @channel.tags}    

  .card-action
    = link_to 'Edit', edit_channel_path(@channel)
    = link_to @channel, data: {:confirm => 'Are you sure?'}, method: :delete do
      i.mdi-content-clear
      | Destroy

.row
  - @channel.posts.order(published_at: :desc).each do |post|
    = render post


= link_to channels_path, class: "waves-effect waves-teal btn-flat"
  | Back
  i.mdi-navigation-arrow-back.left